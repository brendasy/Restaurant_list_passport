<!-- search & sort bar -->
<div class="container search-bar">
  <div class="search-bar-outer bg-primary">
    <div class="search-bar-inner">
      <form class="sort" action="/search&sort">
        <!-- search -->
        <div class="input-group w-auto">
          <input type="text" name="keyword" class="form-control" value="{{keyword}}" placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..." value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
        <!-- sort -->
        <div class="input-group w-auto">
          <select name="sort_type" id="sort">
            <option value="">排序</option>
            <option value="name" {{#if name}}selected{{/if}}>依字母順序(A-Z)</option>
            <option value="-name" {{#if -name}}selected{{/if}}>依字母順序(Z-A)</option>
            <option value="category" {{#if category}}selected{{/if}}>依類別</option>
            <option value="location" {{#if location}}selected{{/if}}>依地區</option>
          </select>
        </div>

      </form>
    </div>
  </div>

  <a class="new-one btn btn-outline-primary" href="/restaurants/new">
    新增
    <i class="fas fa-plus"></i>
  </a>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">

        {{#each restaurants}}
          <div class="mb-3">
            <a href="/restaurants/{{this._id}}" class="text-secondary text-decoration-none">
              <div class="card">
                {{#if this.image}}
                  <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                {{else}}
                  <img class="card-img-top" src="https://via.placeholder.com/300.jpg" alt="{{this.name}}">
                {{/if}}
                <div class="card-body p-3">
                  <h6 class="card-title mb-1">{{this.name}}</h6>

                  <div class="restaurant-category mb-1">
                    <i class="fas fa-utensils pr-2"></i> {{this.category}}
                  </div>
                  {{#if this.rating}}
                    <span class="badge badge-pill badge-danger font-weight-normal">
                      {{this.rating}}
                      <i class="fas fa-star fa-xs"></i>
                    </span>
                  {{/if}}
                  <div class="float-right mb-2">
                    <a class="text-decoration-none btn btn-outline-secondary" href="/restaurants/{{this._id}}/edit">
                      修改
                    </a>

                    <form class="list-inline-item" action="/restaurants/{{this._id}}?_method=DELETE" method="POST">
                      <button class="delete btn btn-outline-secondary">刪除</button>
                    </form>
                  </div>
                </div>
              </div>
            </a>

          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>