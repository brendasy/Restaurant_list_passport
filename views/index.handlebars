<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" value="{{keyword}}" placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..." value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
    <a class="new-one" href="/restaurants/new">
      <div>
        新增
        <i class="fas fa-plus"></i>
      </div>
    </a>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">

        {{#each restaurants}}
          <div class="mb-3">
            <a href="/restaurants/{{this._id}}" class="text-secondary text-decoration-none">
              <div class="card">
                <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                <div class="card-body p-3">
                  <h6 class="card-title mb-1">{{this.name}}</h6>

                  <div class="restaurant-category mb-1">
                    <i class="fas fa-utensils pr-2"></i> {{this.category}}
                  </div>
                  {{#if this.rating}}
                    <span class="badge badge-pill badge-danger font-weight-normal">
                      {{this.rating}}
                      <i class="fas fa-star fa-xs"></i>
                    </span>
                  {{/if}}
                  <div class="float-right mb-2">
                    <a class="text-decoration-none" href="/restaurants/{{this._id}}/edit">
                      <button class="btn btn-outline-secondary">修改</button>
                    </a>

                    <form class="list-inline-item" action="/restaurants/{{this._id}}?_method=DELETE" method="POST">
                      <button class="delete btn btn-outline-secondary">刪除</button>
                    </form>
                  </div>
                </div>
              </div>
            </a>

          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>