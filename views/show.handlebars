<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <div class="d-inline-flex justify-content-end col-12 col-lg-9">
        <a class="ml-1" href="/restaurants/">
          <button class="btn btn-outline-secondary">返回</button>
        </a>
        <a class="ml-1" href="/restaurants/{{restaurant._id}}/edit">
          <button class="btn btn-outline-secondary">修改</button>
        </a>
        <form class="ml-1 list-inline-item" action="/restaurants/{{restaurant._id}}?_method=DELETE" method="POST">
          <button class="delete btn btn-outline-secondary">刪除</button>
        </form>
      </div>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        {{#if restaurant.google_map}}
          <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          </a>
        {{/if}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        {{restaurant.description}}
      </p>

      {{#if restaurant.image}}
        <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
          style="max-width: 600px;">
      {{else}}
        <img class="rounded mx-auto d-block mb-4 w-100" src="https://via.placeholder.com/300.jpg"
          alt="{{restaurant.name}}" style="max-width: 600px;">
      {{/if}}
    </div>
  </div>
</div>